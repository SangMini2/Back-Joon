import sys
input = sys.stdin.readline

for _ in range(int(input())):
    n = int(input())
    logs = sorted(list(map(int, input().strip().split())))
    
    diff = [logs[i+1] - logs[i] for i in range(n-1)]
    ans = 0
    for j in range(n-2):
        ans = max(diff[j+1] + diff[j], ans)
    
    print(ans)
